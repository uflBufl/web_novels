<% provide(:title, "Edit game") %>
<h1>Update your game</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>

      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>

      <%= f.label :author, "Author" %>
      <%= f.text_field :author %>

      <%= f.label :image, "Image" %>
      <%= f.text_field :image %>

      <%= f.label :first_page_id, "Integer" %>
      <%= f.number_field :first_page_id %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>