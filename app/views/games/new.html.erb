<% provide(:title, 'New Game') %>
<h1>Games#new</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>

      <%= f.label :author, "Author" %>
      <%= f.text_field :author %>

      <%= f.label :image, "Image" %>
      <%= f.text_field :image %>

      <%= f.label :first_page_id, "Integer" %>
      <%= f.number_field :first_page_id %>

      <%#= f.label :email %>
      <%#= f.email_field :email %>

      <%#= f.label :password %>
      <%#= f.password_field :password %>

      <%#= f.label :password_confirmation, "Confirmation" %>
      <%#= f.password_field :password_confirmation %>

      <%= f.submit "Create new game", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>