<% provide(:title, "Edit pick") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pick) do |f| %>

      <%= f.label :context %>
      <%= f.text_field :context, class: 'form-control' %>

      <%= f.label :message_id, "Integer" %>
      <%= f.number_field :message_id %>

      <%= f.label :transmit_id, "Integer" %>
      <%= f.number_field :transmit_id %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>